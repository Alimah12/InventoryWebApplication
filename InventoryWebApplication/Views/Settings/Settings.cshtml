@using InventoryWebApplication.Services
@model InventoryWebApplication.Operations.MessageOperation
@inject SettingsService _settingsService

@{
    ViewBag.Title = "Settings";
    ViewBag.PreviousPage = "";
    Layout = "_FormsLayout";
}

<form class="simple-form" accept-charset="UTF-8" method="post" asp-controller="Settings" asp-action="Settings">
    <h4>Sales</h4>
    <div class="form-body">
        <div class="form-field">
            <label class="form-label" for="paymentMethodsInput">
                Payment Options: <br>
                <span class="text-secondary">(One per line)</span>
            </label>
            <textarea type="text" name="paymentNames" id="paymentMethodsInput" cols="22" rows="5">@_settingsService.GetPaymentMethods().Aggregate("", (s, s1) => s + "\n" + s1)</textarea>
        </div>
    </div>
</form>

@section Scripts
{

}